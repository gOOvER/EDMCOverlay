{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information",
      "EDMCOverlay": "Debug"
    },
    "Console": {
      "FormatterName": "simple",
      "FormatterOptions": {
        "SingleLine": true,
        "IncludeScopes": true,
        "TimestampFormat": "HH:mm:ss "
      }
    }
  },
  "OverlayServer": {
    "Port": 5010,
    "Address": "127.0.0.1",
    "MaxClients": 10,
    "MaxMessageSize": 10240,
    "RateLimitPerSecond": 100,
    "EnableSecurity": true,
    "AllowedCommands": [
      "exit",
      "clear",
      "status"
    ]
  },
  "Performance": {
    "EnableMetrics": true,
    "MetricsExportInterval": 300,
    "MetricsRetentionHours": 24,
    "EnableHealthChecks": true
  },
  "Security": {
    "ValidateInput": true,
    "SanitizeMessages": true,
    "LogSecurityEvents": true,
    "MaxTextLength": 1000,
    "AllowedColors": [
      "red", "green", "blue", "yellow", "white", "black",
      "#[0-9A-Fa-f]{6}"
    ]
  }
}